extends layout

block content

    // Content Header (Page header)
    .content-header.sty-one
        h1 Dashboard - Storage costs on Etho Protocol
        a.twitter-share-button(href='https://twitter.com/intent/tweet?text=Great%20info%20about%20ETHO%20protocol.%20Check%20out%20this%20page.')
            | Tweet ths page

        ol.breadcrumb
            li
                a(href='#') Home
            li
                i.fa.fa-angle-right
                | Dashboard - Storage cost on Etho Protocol
    // Main content
    .content
        // Small boxes (Stat box)
        form(method='GET', action='/dash_storagecost')
            .form-row
                .form-col.col-lg-3.col-sm-6.col-xs-12
                    .info-box.bg-black
                        span.info-box-icon.bg-transparent
                            i.ti-layout-grid3-alt.text-white
                        .info-box-content
                            h6.info-box-text.text-white File size
                            select.form-select(id='size', name='size', aria-label='Select duration')
                                !=selector_size
                            span.progress-description.text-white in MB
                        // /.info-box-content
                    // /.info-box
                // /.col

                .form-col.col-lg-3.col-sm-6.col-xs-12
                    .info-box.bg-black
                        span.info-box-icon.bg-transparent
                            i.ti-layout-grid3-alt.text-white
                        .info-box-content
                            h6.info-box-text.text-white Storage length
                            select.form-select(id='duration', name='duration', aria-label='Select duration')
                                !=selector_length

                            span.progress-description.text-white in time
                        // /.info-box-content
                    // /.info-box
                // /.col

                .form-col.col-lg-3.col-sm-6.col-xs-12
                    .info-box.bg-green
                        span.info-box-icon.bg-transparent
                            i.ti-layout-grid3-alt.text-white
                        .info-box-content
                            h6.info-box-text.text-white Result
                            h1=cost
                            span.progress-description.text-white ETHO

                        // /.info-box-content
                    // /.info-box
                // /.col

                .form-col.col-lg-3.col-sm-6.col-xs-12
                    .info-box.bg-black
                        span.info-box-icon.bg-transparent
                            i.ti-layout-grid3-alt.text-white
                        .info-box-content
                            #btnapp
                                input.btn.btn-primary.btn-action(type='submit', name='btn_upload_profile_pic', value='Calculate')

                        // /.info-box-content
                    // /.info-box
                // /.col
